
{{#each data}}
<tr>
  <td>
    <a class="text" href="{{postLink}}">
      <table class="feed-item">
        <tr>
          <td class="top">
            <table>
              <tr>
                <td class="top">
                  <table>
                    <td>
                      <img
                        width="36"
                        height="36"
                        class="
                        {{#if avatar == ''}}
                          hidden
                        {{/if}}
                        avatar
                        mr-avatar" src="{{avatar}}"
                      >
                    </td>
                    <td>
                      <div class="author">{{ownerName}}</div>
                      <div class="details">
                        <span>{{ spaceName }}</span>
                        <span> â€¢ </span>
                        <span>{{ date }}</span>
                      </div>
                    </td>
                  </table>
                </td>
              </tr>
              <tr>
                <td>
                  <h3 class="text">{{ postTitle }}</h3>
                  <div class="text">{{ postSummary }}</div>
                </td>
              </tr>
            </table>
          </td>
          {{#if image}}
            <td class="top feed-image">
              <img class="feed-image" src="{{ image }}" >
            </td>
          {{/if}}
        </tr>
      </table>
    </a>
  </td>
</tr>
{{/each}}